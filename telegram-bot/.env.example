# Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ACRCloud Credentials (from ACRCloud Dashboard)
ACRCLOUD_HOST=your_host_here
ACRCLOUD_ACCESS_KEY=your_access_key_here
ACRCLOUD_ACCESS_SECRET=your_access_secret_here

# Admin Settings
ADMIN_IDS=123456789,987654321  # Telegram user IDs of bot administrators

# Storage Settings
DOWNLOAD_DIR=downloads
MAX_FILE_AGE_HOURS=1
MAX_DISK_PERCENT=80
MAX_MEMORY_PERCENT=85
CLEANUP_INTERVAL_SECONDS=300

# Video Settings
MAX_VIDEO_SIZE_MB=450
TARGET_VIDEO_SIZE_MB=45
MAX_VIDEO_HEIGHT=720

# Audio Settings
MAX_AUDIO_SIZE_MB=50
AUDIO_BITRATE=192

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=30
MAX_AUDIO_REQUESTS_PER_MINUTE=20
MAX_TOTAL_SIZE_PER_HOUR_MB=1024

# Server Settings
PORT=8080
LOG_LEVEL=INFO
